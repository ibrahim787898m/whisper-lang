    # Player turn
    whisper "\nWhat will you do?"
    whisper "1. Attack"
    whisper "2. Use Potion"
    whisper "3. Defend"
    
    ask "Choose action (1-3):" into action
    
    let defended be 0
    
    when action is 1:
        let damage be randint(15, 25)
        the dragon loses damage health
        whisper "\nâš”ï¸  You attack for " + damage + " damage!"
    
    or when action is 2:
        when player potions greater than 0:
            the player gains 30 health
            the player loses 1 potions
            whisper "\nğŸ§ª You drink a potion and restore 30 HP!"
            
            when player health greater than 100:
                set player health to 100
        otherwise:
            whisper "\nâŒ No potions left!"
    
    or when action is 3:
        set defended to 1
        whisper "\nğŸ›¡ï¸  You brace for the dragon's attack!"
    
    otherwise:
        whisper "\nâ“ Invalid action! You stand confused!"
    
    # Check if dragon defeated
    is dragon health less than 1?
        yes:
            whisper "\nğŸ‰ VICTORY!"
            whisper "The mighty dragon falls!"
            the player gains 500 gold
            whisper "ğŸ’° You obtained " + dragon treasure + " gold!"
            stop
    
    # Dragon turn
    whisper "\nğŸ‰ The dragon attacks!"
    let dragon_damage be randint(20, 30)
    
    when defended is 1:
        let dragon_damage be dragon_damage / 2
        whisper "ğŸ›¡ï¸  Your defense reduces damage!"
    
    the player loses dragon_damage health
    show "ğŸ’¥ You take " + dragon_damage + " damage!"
    
    # Check if player defeated
    is player health less than 1?
        yes:
            whisper "\nğŸ’€ DEFEAT!"
            whisper "You have been slain by the dragon..."
